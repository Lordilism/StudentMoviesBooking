<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesBookingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomNavTheme" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorOnPrimary">@color/colorAccent</item>

        <item name="colorOnSurface">@color/colorPrimary</item>

    </style>

    <style name="myFullscreenAlertDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">//no
        actionbar, but status bar exists
        <item name="android:windowFullscreen">false</item>
        //add status bar
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        //smooth animation
        <item name="colorAccent">@color/colorAccent</item>
        //change button text color
        <item name="background">@android:color/transparent</item>
    </style>
    
    <style name="myInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorOnPrimary">@color/colorAccent</item>
    </style>

<!--    For Range Slider-->
    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/color_dotted_line</item>
        <item name="colorOnSurface">@color/color_dotted_line</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>


</resources>