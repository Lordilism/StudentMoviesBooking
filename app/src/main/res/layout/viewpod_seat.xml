<?xml version="1.0" encoding="utf-8"?>
<com.example.moviesbookingapp.viewpods.SeatViewPods xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_card_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPriceFromSeatSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:fontFamily="@font/dm_sans"
        android:letterSpacing="0.01"
        android:text="Normal (4500ks)"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/text_regular_2x" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/colorSecondaryText"
        android:layout_alignBottom="@id/rvSeatRowOne"
        android:layout_alignTop="@id/rvSeatRowOne"
        android:gravity="center"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="A"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSeatRowOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPriceFromSeatSelect"
        android:layout_toEndOf="@id/tvRow"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRowEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/colorSecondaryText"
        android:layout_alignBottom="@id/rvSeatRowOne"
        android:layout_alignTop="@id/rvSeatRowOne"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="A"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSeatRowOneEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPriceFromSeatSelect"
        android:layout_toStartOf="@id/tvRowEnd"
        android:clickable="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRowTwoFromSeatSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rvSeatRowTwo"
        android:layout_alignBottom="@id/rvSeatRowTwo"
        android:layout_marginStart="@dimen/margin_medium"
        android:fontFamily="@font/dm_sans"
        android:gravity="center"
        android:text="B"
        android:textColor="@color/colorSecondaryText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSeatRowTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvSeatRowOne"
        android:layout_toEndOf="@id/tvRowTwoFromSeatSelect"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRowTwoEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/colorSecondaryText"
        android:layout_alignBottom="@id/rvSeatRowTwoEnd"
        android:layout_alignTop="@id/rvSeatRowTwoEnd"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="B"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSeatRowTwoEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvSeatRowOneEnd"
        android:layout_toStartOf="@id/tvRowTwoEnd"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium" />



</com.example.moviesbookingapp.viewpods.SeatViewPods>